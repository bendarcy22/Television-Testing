<h1>Add Show Details</h1>

<% if @error %>
  <h4>Error! <%= @error %></h4>
<% end %>

<% if @error_2 %>
  <h4>Error! <%= @error_2 %></h4>
<% end %>

<form action="/television_shows/new" method="post">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= @params["title"] %>"><br>

    <label for="network">Network</label>
    <input type="network" id="network" name="network" value="<%= @params["network"] %>"><br>

    <label for="starting_year">Starting Year</label>
    <input type="text" id="starting_year" name="starting_year" value="<%= @params["starting_year"] %>"><br>

    <label for="synopsis">Synopsis</label>
    <input type="text" id="synopsis" name="synopsis" value="<%= @params["synopsis"] %>"><br>

    <label for="genre">Genre</label>

    <select name="genre" id="genre">
    	<option value="action">Action</option>
    	<option value="mystery">Mystery</option>
    	<option value="drama">Drama</option>
    	<option value="comedy">Comedy</option>
    	<option value="fantasy">Fantasy</option>
    </select>

    <input type="submit" value="Add TV Show">
  </form>
